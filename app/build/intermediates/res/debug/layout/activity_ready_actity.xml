<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fillViewport="true"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#ffeeeeee"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="50.0dip"
                android:layout_alignParentTop="true"
                android:background="@drawable/topbarbg2" >

                <TextView
                    android:id="@+id/topbar_titleTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="预设活动"
                    android:textColor="#ff333333"
                    android:textSize="20.0sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@id/topback_IV"
                    android:layout_width="60.0dip"
                    android:layout_height="35.0dip"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10.0dip"
                    android:paddingBottom="0.0dip"
                    android:paddingTop="0.0dip"
                    android:src="@drawable/topback_selector" />                
            </RelativeLayout>

            <EditText
                android:id="@+id/ready_actity_titleET"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10.0dip"
                android:layout_marginRight="10.0dip"
                android:layout_marginTop="30.0dip"
                android:hint="我的直播"
                android:imeOptions="actionDone" />

            <RelativeLayout
                android:id="@+id/ready_actity_startdate_panel"
                android:layout_width="fill_parent"
                android:layout_height="40.0dip"
                android:layout_marginLeft="10.0dip"
                android:layout_marginRight="10.0dip"
                android:layout_marginTop="20.0dip"
                android:background="@drawable/settings_upradius_item_selector"
                android:descendantFocusability="blocksDescendants"
                android:padding="8.0dip" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="开始日期:"
                    android:textColor="#ff777777"
                    android:textSize="15.0sp" />

                <TextView
                    android:id="@+id/ready_actity_startdateTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10.0dip"
                    android:text="开始日期"
                    android:textColor="#ff777777"
                    android:textSize="13.0sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/ready_actity_starttime_panel"
                android:layout_width="fill_parent"
                android:layout_height="40.0dip"
                android:layout_marginLeft="10.0dip"
                android:layout_marginRight="10.0dip"
                android:layout_marginTop="1.0dip"
                android:background="@drawable/settings_noradius_item_selector"
                android:descendantFocusability="blocksDescendants"
                android:padding="8.0dip" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="开始时间:"
                    android:textColor="#ff777777"
                    android:textSize="15.0sp" />

                <TextView
                    android:id="@+id/ready_actity_starttimeTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10.0dip"
                    android:text="开始时间"
                    android:textColor="#ff777777"
                    android:textSize="13.0sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/ready_actity_duration_panel"
                android:layout_width="fill_parent"
                android:layout_height="40.0dip"
                android:layout_marginLeft="10.0dip"
                android:layout_marginRight="10.0dip"
                android:layout_marginTop="1.0dip"
                android:background="@drawable/settings_downradius_item_selector"
                android:descendantFocusability="blocksDescendants"
                android:padding="8.0dip" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="持续时间:"
                    android:textColor="#ff777777"
                    android:textSize="15.0sp" />

                <TextView
                    android:id="@+id/ready_actity_durationTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10.0dip"
                    android:text="开始时间"
                    android:textColor="#ff777777"
                    android:textSize="13.0sp" />
            </RelativeLayout>

            <EditText
                android:id="@+id/ready_actity_passwdET"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10.0dip"
                android:layout_marginRight="10.0dip"
                android:layout_marginTop="30.0dip"
                android:hint="直播密码(可选)"
                android:inputType="textVisiblePassword" />

            <EditText
                android:id="@+id/ready_actity_peoplenumET"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10.0dip"
                android:layout_marginRight="10.0dip"
                android:layout_marginTop="30.0dip"
                android:hint="参与人数(可选)"
                android:numeric="integer"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10.0dip"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="是否复制直播地址到剪贴板"
                    android:textColor="#ff000000"
                    android:textSize="16.0sp" />

                <CheckBox
                    android:id="@+id/ready_actity_CB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true" />
            </LinearLayout>
            
            <TextView
                    android:id="@+id/topdone_IV"
                    android:layout_width="fill_parent"
                    android:layout_height="54.0dip" 
                    android:layout_marginTop="10.0dip"                   
                    android:layout_centerVertical="true"
                    android:paddingLeft="10.0dip"
                    android:background="@drawable/topbutton_selector"
                    android:gravity="center"
                    android:paddingTop="0.0dip"
                    android:text="完    成"
                    android:textColor="#ffffffff"
                    android:textSize="22.0sp" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout><!-- From: file:/Users/coollive/devspace/coollive/app/src/main/res/layout/activity_ready_actity.xml -->